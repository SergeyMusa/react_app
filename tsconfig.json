{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "dom",
      "es2015.iterable"
    ],
    "module": "ES2015",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "experimentalDecorators": true,
    "outDir": "dist",
    "useDefineForClassFields": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "_view/*": [
        "src/view/*"
      ],
      "_store/*": [
        "src/store/*"
      ],
      "_common/*": [
        "src/common/*"
      ],
      "_dto/*": [
        "src/common/dto/*"
      ]
    }
  },
  "include": ["./src"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}