{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom"],
    "module": "ES2015",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "experimentalDecorators": true,
    "outDir": "dist",
    "useDefineForClassFields": true,
    "sourceMap": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}